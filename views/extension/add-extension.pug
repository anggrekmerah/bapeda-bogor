extends ../layout

block content
    
    if 'id_extension' in dataUpdate 
        - var action = "update?id="+ dataUpdate.id_extension
        - var buttonAction = 'Update'
    else 
        - var action = "save"
        - var buttonAction = 'Save'

    h1(class="mt-4") #{title}
    div(class="container-fluid border p-2" style="margin-top : 35px;")
        div(class="row")
            div(class="col-md-4")
                | !{alert}
                form(class="row g-3" action=action method="post" id="formPhoneBook")
                    
                    div(class="mb-3")
                        label(for="extension" class="form-label") Extension 
                        input(type="text" class="form-control" id="extension" name="extension" placeholder="Extension" value=dataUpdate.extension  )

                    div(class="mb-3")
                        button(type="submit" class="btn btn-primary float-end") #{buttonAction}
                        a( class="btn btn-primary float-end me-2" href="/extension" ) List
                        button(type="button" class="btn btn-danger float-end me-2" id="discard") Discard
            
            div(class="col-md-4")
                label(class="fw-bold") Notes : 
                p this Extension menu is to create a phone extension for agents 
                p(class="text-danger") - Extension Mandatory
            