extends ../layout

block content
    
    if 'id_group' in dataUpdate 
        - var action = "update?id="+ dataUpdate.id_group
        - var buttonAction = 'Update'
    else 
        - var action = "save"
        - var buttonAction = 'Save'

    h1(class="mt-4") #{title}
    div(class="container-fluid border p-2" style="margin-top : 35px;")
        div(class="row")
            div(class="col-md-4")
                | !{alert}
                form(class="row g-3" action=action method="post" id="formGroup")
                    div(class="mb-3")
                        label(for="groupName" class="form-label") Group Name 
                        input(type="text" class="form-control" id="groupName" name="groupName" placeholder="Group Name" value=dataUpdate.group_name  )
                            
                    div(class="mb-3")
                        label(for="groupDesc" class="form-label") Description
                        textarea(class="form-control" id="groupDesc" name="groupDesc" rows="3")
                            | #{dataUpdate.group_desc}
                    
                    div(class="mb-3")
                        button(type="submit" class="btn btn-primary float-end") #{buttonAction}
                        a( class="btn btn-primary float-end me-2" href="/group" ) Back
                        button(type="button" class="btn btn-danger float-end me-2" id="discard") Reset
            
            div(class="col-md-4")
                label(class="fw-bold") Notes : 
                p This group form serves to create a user group, so the user can be directed to the group to which it is going
                p(class="text-danger") - Group Name Mandatory
                p(class="text-danger") - Group Description Optional
            