    style(type="text/css").
      
      @keyframes blinking-in {
        0% {
          background-color: #cef1b4;
          
        }
      
        100% {
          background-color: #abef78;
          
        }
      }

      @keyframes blinking-out {
        0% {
          background-color: #edafaf;
          
        }
      
        100% {
          background-color: #e37676;
          
        }
      }

      .blinking-in {
       animation: blinking-in 1s infinite;
      }

      .blinking-out {
       animation: blinking-out 1s infinite;
      }

